/* pages/info/info.wxss */
.parent{
  text-decoration: underline;
  margin-left: 10%;
  margin-top: 10%;
}

.son{
  border-bottom:1px dashed #ccc;
  margin-left: 10%;
  margin-bottom: 5%;
}

.self{
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 30%;
  width: 40%;
}

.image{
  height: 100rpx;
  width: 100rpx;
}

.hover{
  opacity: 0.5;
}

.placeholder-view {
  width: 100%;
  height: 150rpx;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  top:0;
}

#hide{
  display: none;
}

#show{
  display: block;
}